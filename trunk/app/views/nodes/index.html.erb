<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Hostname</th>
    <th>Primaryipaddress</th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%=h node.hostname %></td>
    <td><%=h node.primaryipaddress %></td>
    <td><%= link_to 'Show', node %></td>
  </tr>
<% end %>
</table>

